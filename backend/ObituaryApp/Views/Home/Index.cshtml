@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to ObituaryApp</h1>
    <p>This application allows you to create, view, and manage obituary entries.</p>
    <p>
        <a class="btn btn-primary" asp-controller="Obituaries" asp-action="Index">View Obituaries</a>
        @if (User.Identity.IsAuthenticated)
        {
            <a class="btn btn-success" asp-controller="Obituaries" asp-action="Create">Create Obituary</a>
        }
    </p>
</div>
