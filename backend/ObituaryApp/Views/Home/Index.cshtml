@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome friends</h1>
    <p>This application allows you to create, view, and manage obituary entries.</p>
    <p class="d-flex justify-content-center gap-3">
        <a class="btn btn-brand" asp-controller="Obituaries" asp-action="Index">View Obituaries</a>
        @if (User.Identity.IsAuthenticated)
        {
            <a class="btn btn-outline-brand" asp-controller="Obituaries" asp-action="Create">Create Obituary</a>
        }
    </p>
</div>
