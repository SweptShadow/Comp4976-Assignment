@model IEnumerable<ObituaryApp.Models.Obituary>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="mb-0">Obituaries</h1>
        <small class="text-muted">Browse, search, and remember.</small>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-brand">+ Create New</a>
    </div>
    </div>

<form asp-action="Index" method="get" class="row gy-2 gx-2 mb-4">
    <div class="col-12 col-sm-8 col-md-6">
        <input type="text" name="search" value="@ViewBag.Search" placeholder="Search by name" class="form-control" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-brand">Search</button>
        <a asp-action="Index" class="btn btn-outline-brand">Clear</a>
    </div>
    </form>

<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
    @foreach (var item in Model)
    {
        var name = item.FullName ?? "";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        var initials = parts.Length > 0 ? string.Concat(parts.Take(2).Select(p => p[0])).ToUpperInvariant() : "";
        <div class="col">
            <div class="card h-100 shadow-sm obituary-card">
                @if (!string.IsNullOrWhiteSpace(item.PhotoPath))
                {
                    <img class="card-img-top object-fit-contain mx-auto d-block" style="height: 220px;" src="@Url.Content("~" + "/" + item.PhotoPath.TrimStart('/'))" alt="@item.FullName" />
                }
                else
                {
                    <div class="card-img-top d-flex align-items-center justify-content-center bg-light text-secondary mx-auto" style="height: 220px; font-size: 2.25rem;">
                        @initials
                    </div>
                }
                <div class="card-body d-flex flex-column text-center">
                    <h5 class="card-title mb-1 obituary-name">@item.FullName</h5>
                    <div class="text-muted mb-2">@item.DateOfBirth.ToString("yyyy-MM-dd") â€“ @item.DateOfDeath.ToString("yyyy-MM-dd")</div>
                    <p class="card-text obituary-bio flex-grow-1 mx-auto">@(string.IsNullOrWhiteSpace(item.Biography) ? "" : (item.Biography.Length > 140 ? item.Biography.Substring(0, 140) + "..." : item.Biography))</p>
                    <div class="card-actions d-flex justify-content-center gap-2 w-100">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Details</a>
                        @if (User.Identity.IsAuthenticated && (User.IsInRole("admin") || item.CreatedBy == User.GetUserId()))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="d-flex justify-content-between align-items-center mt-4">
    <span>Page @ViewBag.Page of @(Math.Ceiling((double)ViewBag.Total / ViewBag.PageSize))</span>
    <div>
        @if (ViewBag.Page > 1)
        {
            <a asp-action="Index" asp-route-page="@(ViewBag.Page - 1)" asp-route-search="@ViewBag.Search"
                class="btn btn-outline-secondary btn-sm">Previous</a>
        }
        @if ((ViewBag.Page * ViewBag.PageSize) < ViewBag.Total)
        {
            <a asp-action="Index" asp-route-page="@(ViewBag.Page + 1)" asp-route-search="@ViewBag.Search"
                class="btn btn-outline-secondary btn-sm">Next</a>
        }
    </div>
</div>
