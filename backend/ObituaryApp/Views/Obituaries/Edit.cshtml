@model ObituaryApp.Models.Obituary

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow-sm mb-4">
            <div class="card-body p-4">
                <h1 class="mb-1">Edit Obituary</h1>
                <p class="text-muted mb-4">Update the details below.</p>

                <form asp-action="Edit" enctype="multipart/form-data" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="form-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" max="@DateTime.UtcNow.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DateOfDeath" class="form-label"></label>
                        <input asp-for="DateOfDeath" class="form-control" type="date" max="@DateTime.UtcNow.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="DateOfDeath" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Biography" class="form-label"></label>
                        <textarea asp-for="Biography" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Biography" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Photo</label>
                        @if (!string.IsNullOrWhiteSpace(Model.PhotoPath))
                        {
                            <div class="mb-2">
                                <img class="img-fluid rounded shadow-sm object-fit-contain" style="max-height:180px;" src="@Url.Content("~" + "/" + Model.PhotoPath.TrimStart('/'))" alt="Current photo" />
                            </div>
                        }
                        <input type="file" name="photoFile" accept="image/*" class="form-control" />
                        <div class="form-text">Leave empty to keep existing photo.</div>
                    </div>

                    <!-- Metadata (read-only) -->
                    <div class="mb-2">
                        <div class="detail-label">Created By</div>
                        <div>@Model.CreatedByDisplayName</div>
                    </div>
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Created Date</label>
                            <input class="form-control" value="@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")" disabled />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Modified Date</label>
                            <input class="form-control" value="@Model.ModifiedDate.ToString("yyyy-MM-dd HH:mm")" disabled />
                        </div>
                    </div>

                    <div>
                        <input type="submit" value="Save" class="btn btn-brand" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="text-center mb-5">
    <a asp-action="Index" class="btn btn-outline-brand">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
