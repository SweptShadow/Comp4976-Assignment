@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="d-flex justify-content-center">
    <div class="card shadow-sm w-100" style="max-width: 520px;">
        <div class="card-body text-center">
            <h1 class="mb-2">@ViewData["Title"]</h1>
            <p class="text-muted mb-4">Confirm to end your session.</p>
            @{
                if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="btn btn-outline-brand">Click here to Logout</button>
                    </form>
                }
                else
                {
                    <p class="mb-0">You have successfully logged out of the application.</p>
                }
            }
        </div>
    </div>
    </div>
